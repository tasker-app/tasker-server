  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.ts",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write src/**/*.ts --config ./.prettierrc",
    "add:husky": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
